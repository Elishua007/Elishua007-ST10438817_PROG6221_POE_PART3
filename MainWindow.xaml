<Window x:Class="ST10438817_POE_PART3_CHATBOT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ST10438817_POE_PART3_CHATBOT"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown" >
    <Grid x:Name="MainGrid" Background="Black">


        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Logo -->
            <RowDefinition Height="*" />
            <!-- Chat area -->
            <RowDefinition Height="Auto" />
            <!-- Input box -->
        </Grid.RowDefinitions>

      

            <!--JARVIS BACKGROUND -->
     <TextBlock x:Name="ChatBotLogo"
      Grid.Row="0"
      FontFamily="Consolas"
      FontWeight="Bold"
      FontSize="10"
      Foreground= "LightGreen"
      TextWrapping="Wrap"
      HorizontalAlignment="Center"
      VerticalAlignment="Top"
      Margin="10"
      IsHitTestVisible="False"
     Visibility="Visible" 
     />


        <StackPanel x:Name="ChatUI"
                Grid.Row="1"
                Grid.RowSpan="2"
                Visibility="Collapsed"
                    >



          <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#222" Height="350">
            <StackPanel x:Name="ChatResponse" Margin="5" Background="Black"/>
          </ScrollViewer>



            <Grid x:Name="Second" Margin="5" Height="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <!-- TextBox fills available space -->
                    <ColumnDefinition Width="Auto" />
                    <!-- Button sizes to content -->
                </Grid.ColumnDefinitions>

                <TextBox x:Name="UserInputBox"
                 Grid.Column="0"
                 Height="30"
                 Width="640"
                 Background="#333"
                 Foreground="White"
                 BorderThickness="3"
                 FontSize="14"
                 VerticalContentAlignment="Center"
                 Margin="0,0,5,0" 
                         />

                <Button Content="SEND"
                 Grid.Column="1"
                 Width="80"
                 Height="30"
                 FontWeight="Bold"
                 FontStyle="Italic"
                 FontSize="16"
                 Background="#10A37F"
                 Foreground="White"
                 Padding="5,0"
                 VerticalAlignment="Center" 
                 Click="SendButton_Click"        
                />

            </Grid>



            


        </StackPanel>

     <Button x:Name="StartQuiz" Content="START QUIZ"
     Width="100"
     Height="30"
     Margin="10"
     FontSize="16"
     FontWeight="Bold"
     FontStyle="Italic"
     HorizontalAlignment="Center"
     VerticalAlignment="Top"
     Background="#10A37F"
     Foreground="White"
     Click="StartQuiz_Click"
     />



        <StackPanel x:Name="QuizUI"
            Grid.Row="1"
            Grid.RowSpan="2"
            Visibility="Collapsed"
            Background="Black">

            <ScrollViewer x:Name="QuizScrollBar" VerticalScrollBarVisibility="Auto" Height="300" Background="#111">
                <StackPanel x:Name="QuizQuestionArea" Margin="5"/>
            </ScrollViewer>

            <Grid Margin="5" Height="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox x:Name="QuizAnswerBox"
                 Grid.Column="0"
                 Height="30"
                 Background="#222"
                 Foreground="White"
                 FontSize="14"
                 VerticalContentAlignment="Center"
                 Margin="0,0,5,0"
                />

                <Button Content="ENTER"
                 Grid.Column="1"
                 Width="80"
                 Height="30"
                 Background="#007ACC"
                 Foreground="White"
                 FontWeight="Bold"
                 FontSize="16"
                 FontStyle="Italic"
                 Click="SubmitAnswer_Click"
                />
                
            </Grid>
            
        </StackPanel>

        <Button x:Name="ReturnChatBot" Content="JARVIS"
         Grid.Column="1"
         Width="90"
         Height="30"
         Margin="10"
         Background="#007ACC"
         Foreground="White"
         FontWeight="Bold"
         FontStyle="Italic"
         FontSize="16"
         HorizontalAlignment="Center"
         VerticalAlignment="Top"
         Click="ReturnChatBot_Click"
        />





    </Grid>
    
    
    
    
</Window>
